{
  "expo": {
    "name": "Stremio",
    "slug": "stremio-ios",
    "version": "1.0.0",
    "orientation": "all",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splashscreen.png",
      "resizeMode": "cover"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.rcastriotta.stremioios",
      "infoPlist": {
        "NSDocumentsFolderUsageDescription": "This app needs access to the Documents folder to save downloaded videos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.rcastriotta.stremioios"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "react-native-vlc-media-player",
        {
          "ios": {
            "includeVLCKit": false
          },
          "android": {
            "legacyJetifier": false
          }
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "3e60a93d-2442-4cb4-a8e4-dabe3866bc38"
      }
    },
    "owner": "stanica"
  }
}
